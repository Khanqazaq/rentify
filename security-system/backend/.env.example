# =======================================
# RENTIFY SECURITY SYSTEM
# Environment Configuration
# =======================================

# Server
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:8080

# Database
MONGODB_URI=mongodb://localhost:27017/rentify_security
POSTGRESQL_URI=postgresql://user:password@localhost:5432/rentify_security

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_token_secret_min_32_chars
JWT_REFRESH_EXPIRES_IN=7d

# =======================================
# SMS PROVIDERS
# =======================================

# Provider: twilio | smsc | firebase | test
SMS_PROVIDER=test

# Twilio (USA, International)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SMSC.ru (Russia, Kazakhstan)
SMSC_LOGIN=your_smsc_login
SMSC_PASSWORD=your_smsc_password
SMSC_SENDER=Rentify

# =======================================
# LIVENESS AI PROVIDERS
# =======================================

# Provider: facepp | azure | hive | aws_rekognition
LIVENESS_AI_PROVIDER=facepp

# Face++ (Megvii)
FACEPP_API_KEY=your_facepp_api_key
FACEPP_API_SECRET=your_facepp_api_secret

# Azure Face API
AZURE_FACE_KEY=your_azure_subscription_key
AZURE_FACE_ENDPOINT=https://your-region.api.cognitive.microsoft.com

# Hive AI
HIVE_API_KEY=your_hive_api_key

# AWS Rekognition
AWS_REKOGNITION_REGION=us-east-1

# =======================================
# OCR PROVIDERS
# =======================================

# Provider: regula | smartid | tesseract | aws_textract
OCR_PROVIDER=regula

# REGULA Document Reader
REGULA_API_KEY=your_regula_api_key

# SmartID KZ
SMARTID_API_KEY=your_smartid_api_key

# AWS Textract
AWS_TEXTRACT_REGION=us-east-1

# =======================================
# CLOUD STORAGE
# =======================================

# Provider: aws | firebase
STORAGE_PROVIDER=aws

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rentify-security-storage

# Firebase Storage
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_bucket.appspot.com
FIREBASE_SERVICE_ACCOUNT=path/to/serviceAccountKey.json

# =======================================
# SECURITY
# =======================================

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests per window

# Verification Rate Limiting
VERIFICATION_RATE_LIMIT_WINDOW=60 # minutes
VERIFICATION_RATE_LIMIT_MAX=5 # attempts per window

# Session
SESSION_SECRET=your_session_secret_min_32_chars

# Encryption
ENCRYPTION_KEY=your_encryption_key_min_32_chars

# =======================================
# LOGGING & MONITORING
# =======================================

LOG_LEVEL=info # debug | info | warn | error
LOG_FILE=logs/security-system.log

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =======================================
# EMAIL (для уведомлений)
# =======================================

EMAIL_PROVIDER=smtp # smtp | sendgrid | mailgun
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@rentify.kz

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.rentify.kz

# =======================================
# ADMIN
# =======================================

ADMIN_EMAIL=admin@rentify.kz
ADMIN_PHONE=+77001234567

# =======================================
# DEVELOPMENT
# =======================================

# Отображать код в ответе API (только для dev!)
SHOW_SMS_CODE_IN_RESPONSE=true

# Автоматическое одобрение верификаций
AUTO_APPROVE_VERIFICATION=false

# Моковые данные
USE_MOCK_DATA=false
